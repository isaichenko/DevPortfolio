<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
      <li class="breadcrumb-item"><%= link_to @blog.topic.title, topic_show_path(@blog.topic) %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @blog.title %></li>
    </ol>
  </nav>

  <div class="float-right">
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog), class: 'fa-lg' if logged_in?(:site_admin) %>
    <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this blog?' }, class: 'fa-lg' if logged_in?(:site_admin) %>
  </div>

  <p>
    <%= @blog.topic.title %>
  </p>

  <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>

  <p align="justify">
  	<%= markdown @blog.body %>
  </p>

  <%= render 'comments/comment_form' %>

  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>
